{{#if loading}}
<span class="loading fa fa-spin fa-spinner fa-5x"></span>
{{else}}
<div class="col-md-12">
 	<nav class="navbar navbar-default" role="navigation">
 		<ul class="nav navbar-nav">
 			<li><a href="#" class="prev"><i class="fa fa-arrow-left"></i></a></li>
 		</ul>
 		<p class="navbar-text">Gruppe {{clusterIndex}} / {{clusterCount}}</p>
 		<ul class="nav navbar-nav navbar-right">
 			<li><a href="#" class="next"><i class="fa fa-arrow-right"></i></a></li>
 		</ul>
 	</nav>
 	
 	{{#if primarytag}}
 	<div class="primary-tag alert alert-success">
		<strong>
			<i class="fa fa-check"></i>
		</strong>
		<span class="label label-success">{{primarytag.label}}</span>
		<small>vom {{primarytag.created}}</small>
 	</div>
 	{{/if}}
 	<div class="clearfix"></div>
	{{#each cluster.proxies}}
		<blockquote class="sentence" data-sentence-id="{{sentence.id}}">
			{{#highlight sentence ../entity1.name ../entity2.name}}
				{{text}}
			{{/highlight}}
			<footer><a href="{{source}}" target="_blank">{{hostname source}}</a></footer>
		</blockquote>
		<div class="sentence" data-sentence-id="{{sentence.id}}">
			<ul class="tag-box">
				{{#each tags}}
					<li class="row tag-row" data-tag-id="{{id}}">
						<div class="dropdown">
							<input type="radio" name="tag-{{relation}}" class="pull-right{{#if isSituative}} is-situative{{else}} is-not-situative{{/if}}" {{#if showOnEdge}}checked{{/if}}/>
							<span class="tag-date">{{created}}:</span>
							<div class="tag-label label label-default tag-direction-{{direction}} {{#if isSituative}}auto{{/if}} {{#if isPrimary}}has-positive{{/if}}">
								<i class="left fa fa-caret-left"></i>
								<span class="caption">{{label}}</span>
								<i class="right fa fa-caret-right"></i>
							</div>
							<div class="clearfix"></div>
							<!--<ul class="dropdown-menu" role="menu">
								{{#unless isSituative}}
                                    <li class="set-label-local"><a href="#"><i class=""></i>Setze Label nur heute</a></li>
								{{/unless}}
                                <li class="set-label-global"><a href="#"><i class=""></i>Setze Label global</a></li>
							</ul>-->
						</div>
					</li>
				{{/each}}
				<li class="tag-input row">
					<div class="entity1 col-xs-6">{{../entity1.name}}</div>
					<div class="entity2 col-xs-6">{{../entity2.name}}</div>
					<div class="tag right col-xs-12">
						<div class="col-xs-2 dir-l">
							<div class="line"></div>
							<i class="fa fa-caret-left"></i>
						</div>
						<div class="col-xs-8 input">
							<input type="text" class="form-control input-sm" placeholder="Bez. hinzufÃ¼gen">
							<a href="#" class="toggle"><i class="fa fa-random"></i> Richtung wechseln</a>
						</div>
						<div class="col-xs-2 dir-r">
							<div class="line"></div>
							<i class="fa fa-caret-right"></i>
						</div>
						<div class="col-xs-12 is-situative">
							<input type="checkbox"> Beziehung gilt dauerhaft
						</div>
					</div>
				</li>
			</ul>
		</div>
	{{/each}}
</div>
{{/if}}